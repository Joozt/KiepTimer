<Window x:Class="KiepTimer.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiepTimer"
        xmlns:p="clr-namespace:KiepTimer.Properties"
        mc:Ignorable="d"
        Title="KiepTimer" Height="303" Width="392.559" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" 
        Icon="Icon.ico" WindowStartupLocation="CenterScreen" Background="#99000000" MouseDown="Window_MouseDown"
        FontSize="25" WindowState="Maximized">
    
    <Grid>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="textblockTitle" FontSize="100" Foreground="#FFFFA200" TextAlignment="Center" Text="{x:Static p:Resources.DefaultTitle}"/>
        </Label>
        <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
            <TextBlock x:Name="textblockSubtitle" Foreground="#FFC3C3C3" TextAlignment="Center" Text="{x:Static p:Resources.DefaultSubtitle}"/>
        </Label>
    </Grid>
</Window>
